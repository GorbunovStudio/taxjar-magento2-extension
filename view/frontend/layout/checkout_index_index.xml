<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="sortOrder" xsi:type="string">1</item>
                                        </item>
                                        <item name="suggested-address-step" xsi:type="array">
                                            <item name="component" xsi:type="string">
                                                Taxjar_SalesTax/js/view/suggested_address_checkout_step
                                            </item>
                                            <item name="sortOrder" xsi:type="string">0</item>
                                        </item>
                                        <item name="billing-step" xsi:type="array">
                                            <item name="sortOrder" xsi:type="string">3</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="head.components">
            <block class="Magento\Customer\Block\Address\Edit"
                   name="taxjar_customer_address_edit_address_validation_head"
                   template="Taxjar_SalesTax::address/address_validation_head.phtml"/>
        </referenceContainer>
    </body>
</page>